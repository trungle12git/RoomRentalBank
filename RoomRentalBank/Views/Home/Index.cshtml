@model IEnumerable<RoomRentalBank.Models.Post>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ngân hàng nhà trọ</title>
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        <div class="sub-title">
            <h2>Thông tin nhà trọ</h2>
        </div>
       <div class="posts-container">
            @if (!Model.Any())
            {
                <div class="no-data">
                    <p>Không có bài đăng nào.</p>
                </div>
            }
            else
            {
                @foreach (var post in Model)
                {
                    <div class="card">
                        <img src="@post.ImageUrls" alt="Ảnh phòng trọ" class="card-image">
                        <h3 class="card-info">Nhà trọ & phòng trọ</h3>
                        <div class="card-content">
                            <p class="card-title">@post.Description</p>
                            <div class="card-group">
                                <ul class="card-details">
                                    <li class="card-area"><i class="fa-solid fa-chart-area"></i> Diện tích: @post.Area m²</li>
                                    <li class="card-price"><i class="fas fa-money-bill-wave"></i> Giá phòng: @String.Format("{0:N0} ₫", post.Price)</li>
                                    <li class="card-phone"><i class="fa-solid fa-phone"></i> Liên hệ: @post.User?.PhoneNumber</li>
                                    <li class="card-address"><i class="fas fa-map-marker-alt"></i> Địa chỉ: @post.Address</li>
                                </ul>
                                <p class="card-time"><i class="fas fa-clock"></i> Thời gian đăng: @post.CreationDate.ToString("dd/MM/yyyy HH:mm:ss")</p>
                                <p class="card-user"><i class="fas fa-user"></i> Người đăng: <strong>@post.User?.Username</strong></p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</body>
</html>

